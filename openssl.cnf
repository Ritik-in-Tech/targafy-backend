[ req ]
default_bits        = 3072  
distinguished_name  = req_distinguished_name
x509_extensions     = v3_req
string_mask         = utf8only

[ req_distinguished_name ]
countryName                 = Country Name (2 letter code)
countryName_default         = IN
stateOrProvinceName         = State or Province Name (full name)
stateOrProvinceName_default = Karnataka
localityName                = Locality Name (eg, city)
localityName_default        = Bangalore
organizationName            = Organization Name (eg, company)
organizationName_default    = Kartavya
commonName                  = Asset
commonName_max              = 64

[ v3_req ]
# Ensuring the certificate is not a CA
basicConstraints = CA:FALSE

# Key usage limitations to define the purpose of the key
keyUsage = critical, digitalSignature, keyEncipherment

# Extended key usage for specifying purposes such as server or client authentication
extendedKeyUsage = serverAuth, clientAuth

# Adding Subject Alternative Name for multiple DNS names
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = example.com
DNS.2 = www.example.com
DNS.3 = subdomain.example.com
